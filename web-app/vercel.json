{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "regions": ["iad1"],
  "crons": [
    {
      "path": "/api/cron/send-monthly-statements",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/process-emails",
      "schedule": "0 9 * * *"
    }
  ],
  "rewrites": [
    {
      "source": "/superadmin",
      "destination": "/superadmin"
    },
    {
      "source": "/superadmin/:path*",
      "destination": "/superadmin/:path*"
    },
    {
      "source": "/debug-test",
      "destination": "/debug-test"
    },
    {
      "source": "/test-simple",
      "destination": "/test-simple"
    },
    {
      "source": "/test-working",
      "destination": "/test-working"
    }
  ]
}
